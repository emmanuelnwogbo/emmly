<div class="container">
  <h1 class="text-center">Profile</h1>


  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      {{#if message }}
      <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        {{ message  }}
      </div>
      {{/if}}

      <div class="overview">
        <div class="profile-card">
          <img class="img-circle" src=" {{user.photo}} "/>

            <br/>
            <div class="new-gig-card">
              <form class="" action="" method="post">
                <div class="form-group">
                  <label for="">Name</label>
                  <input type="text" class="form-control" name="name" value="" placeholder="{{user.name}}">
                </div>

                <div class="form-group">
                  <label for="">Email</label>
                  <input type="email" class="form-control" name="email" value="" placeholder="{{user.email}}">
                </div>

                <div class="form-group input-group-lg">
                  <label for="">About</label>
                  <input type="text" class="form-control" placeholder="{{user.about}}" name="about" value="">
                </div>

                <button type="submit" class="btn btn-success btn-lg"name="">Submit!</button>
              </form>
            </div>

        </div>
      </div>
    </div>
  </div>
</div>
